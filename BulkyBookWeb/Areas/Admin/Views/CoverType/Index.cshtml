@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container n-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
                <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-patch-plus"></i>  Create New CoverType
            </a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                CoverType Name
            </th>            
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>               
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                    </div>
                     <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>